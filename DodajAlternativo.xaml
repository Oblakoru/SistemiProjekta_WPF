<Window
    x:Class="SistemiProjekta_WPF.DodajParameter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SistemiProjekta_WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DodajParameter"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel Name="rootStack" Margin="20">
        <Label HorizontalAlignment="Center" Content="Ime alternative:" />
        <TextBox
            x:Name="NameTextBox"
            Width="200"
            HorizontalContentAlignment="Center" />

        <StackPanel Name="notranjiStack" />

        <!--<Button
            x:Name="OkButton"
            Margin="0,20,0,0"
            Click="OkButton_Click"
            Content="OK" />-->
        <Button
            x:Name="IzracunButton"
            Margin="0,20,0,0"
            Click="IzracunButton_Click"
            Content="Izračunaj" />
        <Button
            x:Name="CancelButton"
            Margin="0,20,0,0"
            Click="CancelButton_Click"
            Content="Prekliči" />
    </StackPanel>
</Window>
